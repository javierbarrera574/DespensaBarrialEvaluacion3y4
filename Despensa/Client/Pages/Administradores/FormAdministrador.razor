<EditForm Model="administrador" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Nombre</label>
        <div>
            <InputText class="form-control" @bind-Value="@administrador.Nombre" />
            <ValidationMessage For="@(() => administrador.Nombre)" />
        </div>

    </div>
    <div class="form-group">
        <label>Telefono</label>
        <div>
            <InputText class="form-control" @bind-Value="@administrador.NumeroTelefono" />
            <ValidationMessage For="@(() => administrador.NumeroTelefono)" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Administrador administrador { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}