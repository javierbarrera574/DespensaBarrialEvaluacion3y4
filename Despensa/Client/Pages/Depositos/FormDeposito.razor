<EditForm Model="deposito" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Codigo</label>
        <div>
            <InputText class="form-control" @bind-Value="@deposito.CodigoEstante" />
            <ValidationMessage For="@(() => deposito.CodigoEstante)" />
        </div>

    </div>
    <div class="form-group">
        <label>Categoria</label>
        <div>
            <InputText class="form-control" @bind-Value="@deposito.CategoriaEnEstante" />
            <ValidationMessage For="@(() => deposito.CategoriaEnEstante)" />
        </div>
    </div>


    <div class="form-group">
        <label>Cantidad</label>
        <div>
            <InputText class="form-control" @bind-Value="@deposito.CantidadEnEstante" />
            <ValidationMessage For="@(() => deposito.CantidadEnEstante)" />
        </div>
    </div>

    <div class="form-group">
        <label>Minimo</label>
        <div>
            <InputText class="form-control" @bind-Value="@deposito.UnidadMinima" />
            <ValidationMessage For="@(() => deposito.UnidadMinima)" />
        </div>
    </div>


    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Deposito deposito { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}