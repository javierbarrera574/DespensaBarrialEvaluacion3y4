@using Despensa.BD.Datos.Entidades
@inject NavigationManager navigatioManager
@using Despensa.Client.Servicios

<EditForm Model="administrador" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>"txt1"</label>
        <div>
            <InputText class="form-control" @bind-Value="@administrador.Nombre" />
            <ValidationMessage For="@(() => administrador.Nombre)" />
        </div>

    </div>
    <div class="form-group">
        <label>"txt2"</label>
        <div>
            <InputText class="form-control" @bind-Value="@administrador.NumeroTelefono" />
            <ValidationMessage For="@(() => administrador.NumeroTelefono)" />
        </div>
    </div>
    <div class="form-group">
        <label>"txt3"</label>
        <div>
            <InputNumber class="form-select" @bind-Value="@proveedor.AdministradorId" />
            <ValidationMessage For="@(() => proveedor.AdministradorId)" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Administrador administrador { get; set; }
    [Parameter] public Proveedor proveedor { get; set;}
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}